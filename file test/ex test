numero = int(input("inserisci un nuemro intero positivo: "))
#definisco un ciclo for, dove per ogni numero all'interno del range
for i in range (1, numero + 1, 1):
    print(i)   #li stampo

for i in range (1, numero + 1, 1):   #per ogni numero all'interno del range
    if i % 2 == 0:              #se il nuemro è pari allora stampa pari
        print("pari")
    else:
        print("dispari")         #altrimenti stampa dispari

if numero <= 0: #se il numero è minore o uguale a zero
    print("Error, non puoi proseguire") #spampa errore 

#18
#1 deinisca una funz chiamata conta_vocali 
def conta_vocali(stringa): #definisco la funzione con parametro stringa
    vocali = "aeiou"  #mi definisco una variabile che contiene le vocali
    conteggio = 0 #imposto un conteggio da zero 
    for lettera in stringa.lower(): #il conteggio deve partire da zero, per ogni lettera nella stringa 
        if lettera in vocali: #se la lettera è contenuta in vocali
            conteggio += 1
            return conteggio   #restituiscimi il conteggio(la lettera)

#3 
word = input("inserisci una paorla: ") #chiediamo all'utente di inserire una parola
numero = conta_vocali(word)  #numero di vocali trovare sarà = alla funzione definita su che mi porterà il numero di vocali nella parola data dall'utente
