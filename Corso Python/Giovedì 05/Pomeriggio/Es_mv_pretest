scelta = input ("scegli cosa vuoi eseguire tra molt(*), sottr(-), div(/), add(+): ")
if scelta == "+":
    somma = num1 + num2
    print(somma)
elif scelta == "-":
    sottr = num1 - num2
    print(sottr)
elif scelta == "/" and num2 != 0:
    div = num1 / num2
    print(div)
elif scelta == "/" and num2 == 0:
        print("errore: div per zero")
else:
    print("operaizone non valida") 

