if richiesta == "si":
    print("ok dimmi adesso se vuoi aggiungere a fine lista=1, rimuovere=2, inserire=3 ")
    richiesta2 = int(input("dimmi pure: 1, 2, 3?: "))
    if richiesta2 == 1:
        print("ok vuoi aggiungere olive? si o no")
        risposta = input("scegli: si o no")
        if risposta == "si":
            lista.append("olive")
            print(lista)
        else:
            print("ok")
    elif richiesta2 == 2:
        print("vuoi rimuovere yougrt? si o no?: ")
        utente = input("si")
        if utente == "si":
            lista.remove("yogurt")
            print(lista)
    else:
        print("task not completed")
else:
    print("task is not completed") 

